{{#each erro}}
 <div class="alert alert-danger">{{texto}}</div>
{{else}}
 <div class="alert alert-success">Postagem efetuada com sucesso!</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/postagem/nova" method="post">
            <p>
                <label for="">Titulo: </label>
                <input type="text" name="titulo" class="form-control" required>
            </p>
            <p>
                 <label for="descricao">Descrição: </label>
                <textarea name="descricao" id="" class="form-control" required></textarea>

            </p>
            <p>
                <label for="conteudo">Conteudo: </label>
                <textarea name="conteudo" id="" class="form-control" required></textarea>
            </p>
            <p>
                <label for="links">Links: </label>
                <textarea name="links" class="form-control" required></textarea>
            </p>
            <p>
                <input type="submit" value="Postar" class="btn btn-success">
                <input type="reset" value="Limpar" class="btn btn-danger">
            </p>
        </form>
    </div>
</div>