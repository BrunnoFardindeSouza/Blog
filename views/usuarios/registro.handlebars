{{#each erro}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
  <div class="alert alert-success">Registro efetuado com sucesso!</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/salvar" method="post">
            <p>
                <label for="nome">Nome: </label>
                <input type="text" name="nome" id="" class="form-control" required minlength="6" maxlength="64">
            </p>
            <p>
                <label for="email">Email: </label>
                <input type="email" name="email" id="" class="form-control" required minlength="9" maxlength="50"> 
            </p>
            <p>
                <label for="senha">Senha: </label>
                <input type="password" name="senha" id="" class="form-control" required minlength="6" maxlength="20">
            </p>
            <p>
                <input type="submit" value="Registrar" class="btn btn-success">
                <input type="reset" value="Limpar" class="btn btn-danger">

            </p>
        </form>
    </div>
</div>